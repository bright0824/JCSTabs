{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite.config.ts",
    "typed-router.d.ts",
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components.d.ts",
    "src/firebase/firebase-messaging-sw.js",
    "firebase-messaging-sw.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "WebWorker"
    ],
    "types": [
      "vite-plugin-pwa/client",
      "firebase/firestore",
      "@types/webfontloader"
    ]
  }
}
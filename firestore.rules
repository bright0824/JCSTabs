rules_version = '2';
function checkEmail() {
    	return request.auth.token.email.matches('.*@educbe[.]ca$') || request.auth.token.email.matches('leaderbotxlol@gmail.com')
    }
function checkAdmin() {
  return checkEmail() && request.auth != null && request.auth.token.admin
}
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth.uid == userId || checkAdmin();
      allow update: if
        request.auth.uid == userId &&
      	(request.resource.data.diff(resource.data).affectedKeys().hasOnly(['tab'])) &&
      	request.resource.data.tab is list;
    }
    match /admin/items {
      allow read: if request.auth != null;
    }
    match /feedback/{feedbackId} {
      allow read: if checkAdmin();
      allow create: if checkEmail();
    }
  }
}
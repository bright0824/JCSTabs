{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "vite.config.ts",
    "typed-router.d.ts",
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components.d.ts",
    "src/firebase/firebase-messaging-sw.js",
    "firebase-messaging-sw.ts"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0", // this is temporary and should be removed once everything gets typescript 5.0 support
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "WebWorker"
    ],
    "types": [
      "vuetify",
      "vite-plugin-pwa/client",
      "firebase/firestore",
      "@types/webfontloader",
      "unplugin-icons/types/vue"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}